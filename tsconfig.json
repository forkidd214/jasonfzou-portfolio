{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@contexts": ["contexts"],
      "@contexts/*": ["contexts/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "jest.config.js",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.d.ts"
  ],
  "exclude": ["node_modules", "cypress", "cypress.config.ts"]
}
